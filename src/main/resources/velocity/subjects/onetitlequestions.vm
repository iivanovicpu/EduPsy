#parse("/velocity/layout.vm")
#@mainLayout()
<h2>$msg.get("ONE_TITLE_QUESTIONS_TITLE")</h2>
    #if($validation)
    <div class="alert alert-danger fade in" id="validation">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        $validation
    </div>
    #end

<form method="post" class="form-horizontal" id="questionForm">
    <input type="hidden" name="subjectid" value="$subjectId"/>
    <input type="hidden" name="titleid" value="$titleId"/>
    <div class="form-group">
        <label class="control-label col-sm-2" for="question">$msg.get("ONE_TITLE_QUESTIONS_QUESTION")</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="question" name="question">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="answers">$msg.get("ONE_TITLE_QUESTIONS_POSSIBLE_ANSWERS")</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="answers" name="answers">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="points">$msg.get("ONE_TITLE_QUESTIONS_POINTS")</label>
        <div class="col-sm-10">
            <input type="number" name="points" id="points" min="0" max="20" step="1" value="0">
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Unesi</button>
    <button type="submit" formmethod="get" formaction="/subjects/" class="btn btn-warning">$msg.get(
        "SUBJECT_EDIT_CANCEL")</button>
</form>
<div>
    $questions
</div>
<h2>Preview:</h2>
<div>$content</div>
#end
