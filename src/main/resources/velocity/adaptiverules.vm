#parse("/velocity/layout.vm")
#@mainLayout()
    <h2>$msg.get("ADAPTIVE_RULES_HEADING")</h2>
    #if($validation)
    <div class="alert alert-danger fade in" id="validation">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        $validation
    </div>
    #end
    <form method="post" class="form-horizontal" id="rulesForm">
        <div class="form-group">
            <label class="control-label col-sm-2" for="style">$msg.get("ADAPTIVE_RULES_LEARNING_STYLE")</label>
            <div class="col-sm-10">
                <select class="form-control" id="style" name="style">
                    #foreach($style in $styles)
                        <option value="$style.id">$style.description</option>
                    #end
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="intelligence">$msg.get("ADAPTIVE_RULES_INTELLIGENCE_TYPE")</label>
            <div class="col-sm-10">
                <select class="form-control" id="intelligence" name="intelligence">
                    #foreach($intelligence in $intelligences)
                        <option value="$intelligence.id">$intelligence.description</option>
                    #end
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="rule">$msg.get("ADAPTIVE_RULES_RULE")</label>
            <div class="col-sm-10">
                <select class="form-control" id="rule" name="rule">
                    #foreach($rule in $rules)
                        <option value="$rule.id">$rule.description</option>
                    #end
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="mark">$msg.get("ADAPTIVE_RULES_MARK")</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="mark" name="mark">
            </div>
        </div>

        <button type="submit" class="btn btn-primary">$msg.get("ADAPTIVE_RULES_SUBMIT")</button>
        <button type="submit" formmethod="get" formaction="/index/" class="btn btn-warning">$msg.get("ADAPTIVE_RULES_CANCEL")</button>

    </form>
<div class="table-responsive">
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Grupa inteligencije</th>
            <th>Stil uƒçenja</th>
            <th>Pravilo za adaptivni prikaz</th>
            <th>Oznaka</th>
        </tr>
        </thead>
        <tbody>
            #foreach($adaptiverule in $adaptiverules)
            <tr>
                <td>$adaptiverule.id</td>
                <td>$adaptiverule.intelligenceDescription</td>
                <td>$adaptiverule.styleDescription</td>
                <td>$adaptiverule.ruleDescription</td>
                <td>#if($adaptiverule.mark)
                        $adaptiverule.mark
                    #end
                </td>
            </tr>
            #end
        </tbody>
    </table>
</div>


#end
